# IBDPal Server Environment Variables
# Copy this file to .env and update with your values

# Server Configuration
SERVER_PORT=3004
NODE_ENV=development
APP_NAME=IBDPal
APP_VERSION=1.0.0

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=ibdpal_db
DB_USER=your_db_user
DB_PASSWORD=your_db_password

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=24h

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:19006,exp://localhost:19000,http://localhost:3004

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_BASE_URL=http://localhost:3004/api

# Security
BCRYPT_ROUNDS=12 